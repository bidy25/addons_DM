<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_invoicing" model="mail.template">
            <field name="name">Send mail</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="email_from">${ctx.get('email_from') | safe}</field>
            <field name="subject">Subscription Mail</field>
            <field name="email_to">${ctx.get('email_to') | safe}</field>
            <field name="report_template" ref=""/>
            <field name="body_html" type="xml">
                <table width="100%" class="w100" summary="" border="0" cellpadding="0" cellspacing="0" bgcolor="#f7f7f7"
                       align="center">
                    <tr>
                        <td>
                            <table summary="" border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tr>
                                    <td width="40"></td>
                                    <td>
                                        <table summary="" border="0" cellpadding="0" cellspacing="0" width="100%">

                                            <tr>
                                                <td height="40"></td>
                                            </tr>
                                            <tr>
                                                <td style="font-family:Nunito Sans,Trebuchet MS,Arial, Helvetica, sans-serif; font-size:15px; color:#333333">
                                                    Chers ${object.invoice_partner_display_name},
                                                    <p>
                                                        Nous vous faisons parvenir ci-joint notre facture n° ${object.name} du
                                                        ${object.invoice_date }
                                                        <br/>
                                                        correspondant à votre bon de commande n° ${object.invoice_origin} du
                                                        ${object.invoice_date } / finalisée le
                                                        ${object.invoice_date }.
                                                        <br/>
                                                        Nous vous en souhaitons bonne réception.
                                                        <br/>
                                                        Dans l'attente de votre aimable règlement par chèque, virement ou espèces,
                                                        <br/>
                                                        selon votre convenance, nous restons à votre disposition.
                                                        <br/>
                                                        Veuillez agréer Madame/Monsieur
                                                    </p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td height="25"></td>
                                            </tr>

                                            <tr>
                                                <td style="font-family:Nunito Sans,Trebuchet MS,Arial, Helvetica, sans-serif; font-size:15px; color:#333333">

                                                    <br/>
                                                    <br/>
                                                    <table border="2" cellpadding="5" cellspacing="4" style="width:100%;">
                                                        <tr>
                                                            <td>Article</td>
                                                            <td>Montant</td>

                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                ${object.name}
                                                            </td>

                                                            <td>
                                                                ${object.amount_total_signed }
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td height="40"></td>
                                            </tr>
                                            <tr>
                                                <td style="font-family:Nunito Sans,Trebuchet MS,Arial, Helvetica, sans-serif; font-size:15px; color:#333333">
                                                    Cordialement
                                                </td>
                                            </tr>
                                            <tr>
                                                <td height="40"></td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td width="40"></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>