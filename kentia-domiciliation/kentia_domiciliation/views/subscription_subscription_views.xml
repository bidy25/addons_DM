<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="subscription_subscription_tree_inherit" model="ir.ui.view">
            <field name="name">subscription.subscription.tree.inherit</field>
            <field name="model">subscription.subscription</field>
            <field name="inherit_id" ref="subscription_management.subscription_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="subscription_ref"/>
                </xpath>
            </field>
        </record>

        <record id="subscription_subscription_search_inherit" model="ir.ui.view">
            <field name="name">subscription.subscription.search.inherit</field>
            <field name="model">subscription.subscription</field>
            <field name="inherit_id" ref="subscription_management.search_deafult_subscription"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="customer_name"/>
                </field>
                <field name="name" position="after">
                    <field name="product_id" />
                </field>
                <group position="inside">
                    <filter string="Group By Subscription plan" context="{'group_by':'sub_plan_id'}" name="group_by_sub_id"></filter>
                    <filter string="Group By Customer" context="{'group_by':'customer_name'}" name="group_by_customer"></filter>
                </group>
            </field>
        </record>

    </data>
</odoo>