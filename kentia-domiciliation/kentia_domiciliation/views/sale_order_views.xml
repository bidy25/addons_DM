<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='order_lines']/group/group[@name='sale_total']/field[@name='amount_total']"
                       position="after">
                    <label for="amount_convert"/>
                    <div class="o_row">
                        <field name="amount_convert" class="oe_subtotal_footer_separator"/>
                        <span class="oe_subtotal_footer_separator">â‚¬</span>
                    </div>

                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Contract">
                        <group>
                            <field name="contract_sequence"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
