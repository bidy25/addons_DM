<odoo>
    <data>
        <template id="standard_layout" inherit_id="web.external_layout_standard">
            <xpath expr="//img[@t-if='company.logo']" position="replace">
                <t t-if="o.partner_id.company_type=='company'">
                    <t t-if="report_type == 'pdf'">
                        <img src="/kentia_domiciliation/static/src/img/header.jpg" style="max-height: 150px;"/>
                    </t>
                    <t t-else="report_type == 'html'">
                        <img src="/kentia_domiciliation/static/src/img/header.jpg" style="max-height: 90px;"/>
                    </t>
                </t>
                <t t-else="o.partner_id.company_type!='company'">
                    <t t-if="report_type == 'pdf'">
                        <img src="/kentia_domiciliation/static/src/img/header.jpg" style="max-height: 150px;"/>
                    </t>
                    <t t-else="report_type == 'html'">
                        <img src="/kentia_domiciliation/static/src/img/header.jpg" style="max-height: 90px;"/>
                    </t>
                </t>

            </xpath>
            <xpath expr="//div[@t-if='company.logo or company.report_header']" position="replace">
            </xpath>
            <xpath expr="//div[@name='company_address']" position="replace">
            </xpath>
            <xpath expr="//div[@t-attf-class='footer o_standard_footer o_company_#{company.id}_layout']/div/ul" position="replace">
            </xpath>
        </template>
    </data>
</odoo>