<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">

            <xpath expr="//div[@t-if='o.partner_id.vat']" position="after">
                <div t-if="o.partner_id.company_type=='company'">
                    <t t-if="o.partner_id.nif">
                        <label style="margin: 0px 0px 2px;" for="o.partner_id.nif">NIF :
                            <span t-field="o.partner_id.nif"/>
                        </label>
                        <br/>
                    </t>
                    <t t-if="o.partner_id.stat">
                        <label for="o.partner_id.stat" style="margin-bottom: 2px;">STAT :
                            <span t-field="o.partner_id.stat"/>
                        </label>
                        <br/>
                    </t>
                    <t t-if="o.partner_id.rcs">
                        <label for="o.partner_id.rcs">RCS :
                            <span t-field="o.partner_id.rcs"/>
                        </label>
                    </t>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('page')]/table/thead/tr/th[@name='th_taxes']" position="replace">
            </xpath>
            <xpath expr="//div[hasclass('page')]/table/tbody/t[@t-foreach='lines']/tr/t/td[5]" position="replace">
            </xpath>
            <xpath expr="//div[hasclass('clearfix')]/div[hasclass('row')]" position="after">
                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto" style="padding-right:0px;">
                    <table class="table table-sm" style="page-break-inside: avoid;">
                        <tr class="border-black o_total">
                            <td>
                                <strong>En €</strong>
                            </td>
                            <td class="text-right">
                                <span class="text-nowrap" t-field="o.amount_convert"/> €
                            </td>
                        </tr>
                    </table>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('clearfix')]" position="after">
                <p>
                    <i>Arrested at the sum of :
                        <strong>
                            <t t-esc="o.currency_id.amount_to_text(o.amount_total)"/>
                        </strong>
                    </i>
                </p>
                <table style="width: 100%;">
                    <tr>
                        <td style="width: 65%;">
                            <div class="col-sm" style="padding-left: 0px;">
                                <p style="font-size: 14px; ">
                                    <strong>Payments terms :</strong>
                                    <br/>
                                    Each rent is payable no later than the 10th of the current month.
                                    <br/>
                                    Get a 7% discount for payment before the 5th of the month.
                                    <br/>
                                    Please make checks or bank transfers payable to KENTIA-DOMICILIATION sarl
                                    <br/>
                                    BFV-SG Antaninarenina 00008 00005 05003011573 19 MGA
                                    <br/>Mvola : 034 92 210 35 OrangeMoney : 032 05 357 47 on behalf of KENTIA-DOMICILIATION sarl
                                </p>
                            </div>
                        </td>
                        <td>
                            <div class="" name="company_signature">
                                <div class="text-center">
                                    <strong>Signature</strong>
                                </div>
                                <div class="text-center">
                                    <img src="/kentia_domiciliation/static/src/img/sign.jpg" style="max-height: 4cm; max-width: 8cm;"/>
                                </div>
                                <div class="text-center">
                                    <p>
                                        Onisoa Ratovoson
                                    </p>
                                </div>
                            </div>
                        </td>
                    </tr>

                </table>

            </xpath>
            <xpath expr="//div[hasclass('page')]/p[2]" position="replace">
            </xpath>
        </template>
    </data>
</odoo>
