<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saleorder_inherit" inherit_id="sale.report_saleorder_document">

            <xpath expr="//div[@t-field='doc.partner_id']" position="after">
                <div t-if="doc.partner_id.company_type=='company'">
                    <t t-if="doc.partner_id.nif">
                        <label for="doc.partner_id.nif" style="margin: 0px 0px 2px;">NIF :
                            <span t-field="doc.partner_id.nif"/>
                        </label>
                        <br/>
                    </t>
                    <t t-if="doc.partner_id.stat">
                        <label for="doc.partner_id.stat" style="margin: 0px 0px 2px;">STAT :
                            <span t-field="doc.partner_id.stat"/>
                        </label>
                        <br/>
                    </t>
                    <t t-if="doc.partner_id.rcs">
                        <label for="doc.partner_id.rcs">RCS :
                            <span t-field="doc.partner_id.rcs"/>
                        </label>
                        <br/>
                    </t>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('page')]/div[@name='so_total_summary']/div[@name='total']" position="after">
                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto" style="padding-right:0px;">
                    <table class="table table-sm">
                        <tr class="border-black o_total">
                            <td name="td_amount_total_label">En €</td>
                            <td name="td_amount_total" class="text-right">
                                <span class="text-nowrap" t-field="doc.amount_convert"/> €
                            </td>
                        </tr>
                    </table>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('page')]/table/thead/tr/th[@name='th_taxes']" position="replace">
            </xpath>
            <xpath expr="//div[hasclass('page')]/table/tbody/t[@t-foreach='doc.order_line']/tr/t/td[@name='td_taxes']" position="replace">
            </xpath>

            <xpath expr="//div[@name='so_total_summary']" position="after">
                <p>
                    <i>Arrested at the sum of :
                        <strong>
                            <t t-esc="doc.currency_id.amount_to_text(doc.amount_total)"/>
                        </strong>
                    </i>
                </p>
            </xpath>
            <xpath expr="//div[@t-if='doc.signature']" position="after">
                <table style="width: 100%;">
                    <tr>
                        <td style="width: 65%;">
                            <div class="col-sm" style="padding-left: 0px;">
                                <p style="font-size: 14px; ">
                                    <strong>Payments terms :</strong>
                                    <br/>
                                    Each rent is payable no later than the 10th of the current month.
                                    <br/>
                                    Get a 7% discount for payment before the 5th of the month.
                                    <br/>
                                    Please make checks or bank transfers payable to KENTIA-DOMICILIATION sarl
                                    <br/>
                                    BFV-SG Antaninarenina 00008 00005 05003011573 19 MGA
                                    <br/>Mvola : 034 92 210 35 OrangeMoney : 032 05 357 47 on behalf of KENTIA-DOMICILIATION sarl
                                </p>
                            </div>
                        </td>
                        <td>
                            <div class="" name="company_signature">
                                <div class="text-center">
                                    <strong>Signature</strong>
                                </div>
                                <div class="text-center">
                                    <img src="/kentia_domiciliation/static/src/img/sign.jpg" style="max-height: 4cm; max-width: 8cm;"/>
                                </div>
                                <div class="text-center">
                                    <p>
                                        Onisoa Ratovoson
                                    </p>
                                </div>
                            </div>
                        </td>
                    </tr>

                </table>
            </xpath>

        </template>
    </data>
</odoo>
