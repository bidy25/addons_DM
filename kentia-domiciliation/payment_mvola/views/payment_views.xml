<odoo>
    <data>
        <record id="acquirer_form_mvola" model="ir.ui.view">
            <field name="name">acquirer.form.mvola</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'mvola')]}">
                        <field name="mvola_api_username"/>
                        <field name="mvola_api_password"/>
                        <field name="mvola_hashcode"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="mvola_error" model="website.page">
            <field name="name">Payment Mvola error</field>
            <field name="type">qweb</field>
            <field name="url">/payment/mv/error</field>
            <field name="website_indexed" eval="False"/>
            <field name="is_published">True</field>
            <field name="key">payment_mvola.error</field>
            <field name="arch" type="xml">
                <t name="Payment Mvola error" t-name="payment_mvola.mvola_error">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="oe_structure" id="oe_structure_payment_mvola_error_1"/>
                            <div class="container">
                                <h1>Payment Mvola error</h1>
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="alert alert-danger" role="status">
                                             Error on payment, thanks to try later. Return on <a href="/shop">Shop</a>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <t t-call="website.company_description"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure" id="oe_structure_payment_mvola_error_2"/>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="mvola_cancel" model="website.page">
            <field name="name">Payment Mvola canceled</field>
            <field name="type">qweb</field>
            <field name="url">/payment/mv/cancel</field>
            <field name="website_indexed" eval="False"/>
            <field name="is_published">True</field>
            <field name="key">payment_mvola.cancel</field>
            <field name="arch" type="xml">
                <t name="Payment Mvola cancel" t-name="payment_mvola.mvola_cancel">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="oe_structure" id="oe_structure_payment_mvola_cancel_1"/>
                            <div class="container">
                                <h1>Payment Mvola canceled</h1>
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="alert alert-danger" role="status">
                                             Payment Mvola canceled. Return on <a href="/shop">Shop</a>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <t t-call="website.company_description"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure" id="oe_structure_payment_mvola_cancel_2"/>
                        </div>
                    </t>
                </t>
            </field>
        </record>

    </data>
</odoo>
